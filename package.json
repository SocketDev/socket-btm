{
  "name": "socket-btm-monorepo",
  "version": "0.0.0",
  "packageManager": "pnpm@10.26.0",
  "private": true,
  "license": "MIT",
  "description": "Socket Build Tree Manager - Build infrastructure for Node.js binaries and ML models",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.25.0"
  },
  "scripts": {
    "build": "pnpm --filter @socketbin/node-smol-builder build",
    "build:all": "pnpm --filter @socketbin/node-smol-builder build:all",
    "check": "node scripts/check.mjs",
    "clean": "pnpm --filter @socketbin/node-smol-builder clean",
    "cover": "node packages/bin-infra/scripts/run-coverage.js all",
    "fix": "node scripts/lint.mjs --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "node scripts/lint.mjs",
    "lint:fix": "node scripts/lint.mjs --fix",
    "postinstall": "git submodule update --init --recursive || true",
    "prepare": "husky",
    "release": "pnpm --filter @socketbin/node-smol-builder release",
    "release:publish": "pnpm --filter @socketbin/node-smol-builder release:publish",
    "setup": "node scripts/setup.mjs",
    "test": "node scripts/test.mjs",
    "test:smol": "pnpm --filter @socketbin/node-smol-builder test",
    "update": "node scripts/update.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@eslint/compat": "1.3.2",
    "@eslint/js": "9.35.0",
    "@socketsecurity/lib": "catalog:",
    "eslint": "9.35.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "57.0.8",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "56.0.1",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "taze": "19.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "catalog:",
    "yoctocolors-cjs": "catalog:"
  }
}
